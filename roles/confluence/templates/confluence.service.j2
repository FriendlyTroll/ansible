# {{ ansible_managed }}

[Unit]
Description=Atlassian Confluence
After=syslog.target network.target

[Service]
Type=forking
User={{ confluence_owner }}
{% if confluence_service_environment is defined %}
{%    for cse in confluence_service_environment %}
Environment={{cse}}
{%    endfor %}
{% endif %}
PIDFile={{ confluence_home }}/atlassian-confluence-{{ confluence_version }}/work/catalina.pid
ExecStart={{ confluence_home }}/atlassian-confluence-{{ confluence_version }}/bin/start-confluence.sh
ExecStop={{ confluence_home }}/atlassian-confluence-{{ confluence_version }}/bin/stop-confluence.sh

[Install]
WantedBy=multi-user.target
